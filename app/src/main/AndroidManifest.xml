<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.matthewcannefax.menuplanner">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor"
        android:largeHeap="true">

        <activity android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.MenuListActivity"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean">
        </activity>
        <activity android:name=".activity.RecipeListActivity"
            android:parentActivityName=".activity.MenuListActivity"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MenuListActivity"
                />

        </activity>
        <activity android:name=".activity.AddRecipeActivity"
            android:parentActivityName=".activity.MenuListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MenuListActivity"
                />

        </activity>
        <activity android:name=".activity.GroceryListActivity"
            android:parentActivityName=".activity.MenuListActivity"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MenuListActivity"
                />

        </activity>
        <activity android:name=".activity.EditRecipeActivity"
            android:parentActivityName=".activity.MenuListActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MenuListActivity"
                />

        </activity>

        <provider
            android:authorities="${applicationId}.provider"
            android:name="android.support.v4.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

    </application>

</manifest>